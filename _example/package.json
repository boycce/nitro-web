{
  "name": "example",
  "private": true,
  "version": "0.0.1",
  "main": "webpack.config.js",
  "type": "module",
  "homepage": "https://boycce.github.io/nitro-web/",
  "scripts": {
    "build": "NODE_ENV=production webpack --target=web",
    "dev": "clear && npm run dev:lint --silent & npm run dev:server --silent & npm run dev:client --silent",
    "dev:client": "webpack serve --progress --config ./webpack.config.js",
    "dev:server": "nodemon ./server -q -w ./server/ -w ./components/ -e js",
    "dev:lint": "eslint ./components ./server/",
    "minor": "standard-version --release-as minor && git push staging",
    "patch": "standard-version --release-as patch && git push staging",
    "start": "node ./server",
    "stripe": "stripe listen --forward-to localhost:3001/api/stripe/webhook"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@hokify/axios": "^0.19.1",
    "@stripe/stripe-js": "^1.34.0",
    "axios-retry": "^3.3.1",
    "monastery": "~3.5.2",
    "nitro-web": "file:..",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^9.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.8.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.24.7",
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/eslint-plugin": "^11.11.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@svgr/webpack": "^8.1.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "autoprefixer": "^9.8.8",
    "babel-loader": "^8.0.6",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-react-html-attrs": "^2.1.0",
    "clean-terminal-webpack-plugin": "https://github.com/boycce/clean-terminal-webpack-plugin.git",
    "clean-webpack-plugin": "^4.0.0",
    "color": "^4.2.3",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.12.1",
    "css-loader": "^3.6.0",
    "csv-loader": "^3.0.5",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-webpack-plugin": "^2.7.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "nodemon": "^2.0.1",
    "postcss": "^8.4.49",
    "postcss-for": "^2.1.1",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-nested": "^7.0.2",
    "react-refresh": "^0.14.2",
    "standard-version": "^9.3.2",
    "string-replace-loader": "^3.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "twin.macro": "^3.4.1",
    "typescript": "^5.5.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.6.0",
    "webpack-node-externals": "^1.7.2"
  },
  "eslintConfig": {
    "extends": "../.eslintrc.json"
  },
  "engines": {
    "node": "^18"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "nodemonConfig": {
    "events": {
      "restart": "echo \"\\033[0;35mExpress restarting..\\033[0m\""
    }
  },
  "standard-version": {
    "releaseCommitMessageFormat": "{{currentTag}}",
    "sign": true,
    "skip": {
      "changelog": true,
      "tag": true
    }
  },
  "author": "",
  "license": "ISC"
}
