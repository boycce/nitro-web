{
  "name": "nitro-web",
  "version": "0.0.93",
  "repository": "github:boycce/nitro-web",
  "homepage": "https://boycce.github.io/nitro-web/",
  "description": "Nitro is a battle-tested, modular base project to turbocharge your projects, styled using Tailwind ðŸš€",
  "type": "module",
  "main": "./client/index.ts",
  "exports": {
    ".": "./client/index.ts",
    "./client/imgs/*": "./client/imgs/*",
    "./client/globals": "./client/globals.ts",
    "./server": {
      "require": "./server/index.js",
      "import": "./server/index.js",
      "types": "./types/server/index.d.ts"
    },
    "./types": "./types.ts",
    "./.eslintrc.json": "./.eslintrc.json",
    "./tsconfig.json": "./tsconfig.json",
    "./util": {
      "require": "./util.js",
      "import": "./util.js",
      "types": "./types/util.d.ts"
    }
  },
  "scripts": {
    "major": "npm run types && standard-version -a --release-as major && npm publish && cd ../webpack && npm publish",
    "minor": "npm run types && standard-version -a --release-as minor && npm publish && cd ../webpack && npm publish",
    "patch": "npm run types && standard-version -a --release-as patch && npm publish && cd ../webpack && npm publish",
    "types": "tsc util.js ./server/index.js --declaration --declarationMap --allowJs --emitDeclarationOnly --jsx react-jsx --esModuleInterop --skipLibCheck --outDir types && cd ../webpack && npm run types -w . && cd ../core"
  },
  "dependencies": {
    "@hokify/axios": "^0.19.1",
    "axios": "^1.9.0",
    "axios-retry": "^3.3.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "date-fns": "^3.6.0",
    "dateformat": "^5.0.3",
    "dotenv": "^14.3.2",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "inline-css": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.5.0",
    "nodemailer-mailgun-transport": "^2.0.2",
    "nunjucks": "^3.2.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sort-route-addresses-nodeps": "0.0.4",
    "standard-version": "github:boycce/standard-version",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/dateformat": "^5.0.3"
  },
  "peerDependencies": {
    "@stripe/stripe-js": "^1.34.0",
    "monastery": "~3.5.6",
    "stripe": "^9.16.0"
  },
  "_peers-are-packages-that-will-be-used-in-the-host-repo-too": "",
  "engines": {
    "node": ">=18 <21"
  },
  "standard-version": {
    "releaseCommitMessageFormat": "{{currentTag}}",
    "sign": true,
    "skip": {
      "changelog": true,
      "tag": true
    },
    "scripts": {
      "prerelease": "npm run types && git add ./types"
    },
    "bumpFiles": [
      "package.json",
      "../webpack/package.json",
      {
        "filename": "../example/package.json",
        "updater": "./semver-updater.cjs"
      },
      {
        "filename": "../!(core|example|webpack)/package.json",
        "updater": "./semver-updater.cjs",
        "skipCommit": true
      }
    ]
  },
  "keywords": [
    "express",
    "javascript",
    "monastery",
    "mongodb",
    "react",
    "tailwind",
    "webpack"
  ],
  "license": "ISC"
}
